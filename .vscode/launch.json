  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "program": "${workspaceFolder}/bin/kasha",
      "args": ["server", "--config=config.dev.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Worker",
      "program": "${workspaceFolder}/bin/kasha",
      "args": ["worker", "--config=config.dev.js", "--no-headless"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Async Worker",
      "program": "${workspaceFolder}/bin/kasha",
      "args": ["worker", "--config=config.dev.js", "--async", "--no-headless"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "install",
      "program": "${workspaceFolder}/bin/kasha",
      "args": ["install", "--config=config.dev.js"]
    }
  ]
}
